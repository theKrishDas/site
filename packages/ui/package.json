{
  "name": "@repo/ui",
  "version": "0.0.0",
  "devDependencies": {
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.17",
    "@types/react": "^19.2.7",
    "shiki": "^3.21.0",
    "tailwindcss": "^4.1.17",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "react": "^19.2.1"
  },
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js",
    "./react-code-block": "./dist/react-code-block/index.js",
    "./file-name": "./dist/file-name/index.js"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "build:packages": "bun run build:styles && bun run build:components"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@repo/utils": "workspace:*",
    "motion": "^12.28.1",
    "react-aria-components": "^1.14.0",
    "react-icons": "^5.5.0",
    "react-use-clipboard": "^1.0.9"
  }
}
